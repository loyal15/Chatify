<resources>

    <declare-styleable name="CustomTextViewNoDependOnBackgroundSize">
        <attr name="backgroundColor" format="reference" />
    </declare-styleable>
    <declare-styleable name="PullToRefresh">
        <attr name="ptrAdapterViewBackground" format="reference|color" />
        <attr name="ptrHeaderBackground" format="reference|color" />
        <attr name="ptrHeaderTextColor" format="reference|color" />
        <attr name="ptrHeaderSubTextColor" format="reference|color" />
        <attr name="ptrMode">
            <flag name="pullDownFromTop" value="0x1" />
            <flag name="pullUpFromBottom" value="0x2" />
            <flag name="both" value="0x3" />
        </attr>
    </declare-styleable>
    <declare-styleable name="AspectRatioImageView">
        <attr name="ratio_by_width" format="boolean" />
    </declare-styleable>
    <declare-styleable name="CircleImageView">
        <attr name="fitByWidth" format="boolean" />
    </declare-styleable>
    <declare-styleable name="SquareFrameLayout">
        <attr name="keep_width" format="boolean" />
    </declare-styleable>
    <declare-styleable name="AnimatedTextSwitcher">
        <attr name="layoutID" format="reference" />
        <attr name="textViewID" format="reference" />
        <attr name="animateInID" format="reference" />
        <attr name="animateOutID" format="reference" />
        <attr name="txtColor" format="color" />
        <attr name="txt" format="string|reference" />
    </declare-styleable>
    <declare-styleable name="ExtendedSpinner">
        <attr name="headerViewBG" format="reference" />
        <attr name="itemViewBGColor" format="color|reference" />
        <attr name="itemViewSelectedBGColor" format="color|reference" />
        <attr name="arrowUp" format="reference" />
        <attr name="arrowDown" format="reference" />
    </declare-styleable>
    <declare-styleable name="ExtendedSimpleTextSpinner">
        <attr name="itemTextColor" format="color|reference" />
        <attr name="contents" format="reference" />
        <attr name="hint" format="string|reference" />
    </declare-styleable>

    <attr name="sectionListView.sectionTextViewPadding" format="dimension" />
    <attr name="sectionListView.sectionTextViewTextColor" format="color" />
    <attr name="sectionListView.sectionTextViewTextSize" format="dimension" />
    <attr name="sectionListView.sectionItemPadding" format="dimension" />
    <attr name="sectionListView.sectionItemBackground" format="color|reference" />
    <attr name="sectionListView.listTextViewPadding" format="dimension" />
    <attr name="sectionListView.listTextViewTextColor" format="color" />
    <attr name="sectionListView.listTextViewTextSize" format="dimension" />
    <attr name="sectionListView.listItemPadding" format="dimension" />
    <attr name="sectionListView.listItemBackground" format="color|reference" />

</resources>